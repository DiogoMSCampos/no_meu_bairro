<% content_for :contents do %>

    <div id="fb-root"></div>
    <script>(function (d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s);
        js.id = id;
        js.src = "//connect.facebook.net/en_US/all.js#xfbml=1";
        fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));</script>

<div id="home">

  <header>
    <div class="container-fluid">
      <div class="row-fluid">
        <div class="span12">
          <h1><%= t(:app_name) %></h1>
          <h2><%= t(:mission_statement) %>.</h2>
          <a href="/reports/new" class="btn btn-large btn-danger"><%= t(:report_new_problem)%></a>

          <div class="visible-desktop">
            <h6>
              <a href="#mobile" data-toggle="modal"> <%= t(:open_in_smartphone) %> </a>
            </h6>

          </div>

          <div class="fb-like"
               data-href="http://www.facebook.com/pages/No-meu-Bairro/510598865669972"
               data-send="false"
               data-layout="button_count"
               data-width="450"
               data-show-faces="false"
               data-font="lucida grande">
          </div>

          <div id="mobile" class="modal modal-fluid hide full-image">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <%= image_tag image_path('handheld.jpg') %>
          </div>



        </div>
      </div>
    </div>
  </header>

  <%= gmaps(:markers =>
                    {
                            :data => @reports,
                            :options =>
                                    {
                                            :randomize => true,
                                            :max_random_distance => 10
                                    }
                    },
            :map_options =>
                    {
                            :container_class => 'map-container hidden-phone',
                            :raw => '{styles: myStyle}'

                    }) %>

</div>

<% end %>
