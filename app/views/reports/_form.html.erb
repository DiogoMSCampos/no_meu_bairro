<%= form_for(@report, :html => { :multipart => true, :class => 'form-horizontal' }) do |f| %>

    <% if @report.errors.any? %>
        <div id="error_explanation" class="alert alert-error">
          <p><%= pluralize(@report.errors.count, "error") %> prohibited this report from being saved:</h2>
          <ul>
            <% @report.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="control-group">
      <%= f.label :photos, "Foto(s)", :class => 'control-label' %>
      <div class="controls">
        <%= f.fields_for :photos do |photo_builder| %>
          <%= render 'photo_fields', :pf => photo_builder %>
        <% end %>
        <p><%= link_to_add_fields "Adicionar Foto", f, :photos %></p>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :description, "Descrição", :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :description, :rows => 3, :placeholder => 'Detalhes sobre o problema...' %>
      </div>
    </div>

    <p>Nota: A tua localização foi recolhida automaticamente.</p>

    <input type="hidden" name="report[coordinates][]" id="longitude" value=""/>
    <input type="hidden" name="report[coordinates][]" id="latitude" value=""/>

    <div class="form-actions">
      <%= f.submit "Enviar", :class => 'btn btn-danger btn-large' %>
      <%= link_to 'Voltar', root_path, :class => 'btn' %>
    </div>

<% end %>