
<p id="notice"><%= notice %></p>

<p>
  <b>Description:</b>
  <%= @report.description %>
</p>

<p>
  <b>Coordinates:</b>
  <%= @report.coordinates %>



</p>

<div id="map_canvas" style="width:50%; height:50%"></div>

<script type="text/javascript">
    initialize_map('map_canvas' ,<%= @report.coordinates[1] %>, <%= @report.coordinates[0] %>);
</script>

<% @report.images.to_a.each do |image| %>
    <%= image_tag(url_for({:controller => 'report_images', :action => 'show', :id => image})) %>
<% end %>

<%= link_to 'Edit', edit_report_path(@report) %> |
<%= link_to 'Back', reports_path %>
